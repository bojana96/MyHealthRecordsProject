<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top navbar-light" style="background: url('../../Images/background.jpg');background-repeat:no-repeat;  
        background-size:cover; border: none;">
        <div style="background-color: rgba(243, 16, 171, 0.2); ">
        <div class="container " >
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MYHealthRecords", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style= "color: white; font-size: 20px;" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav" >
                    @if (User.IsInRole("Doctor"))
                    {
                       // <li>@Html.ActionLink("Doctors", "Index", "Doctors")</li>
                        <li>@Html.ActionLink("Patients", "Index", "Patients", new { @style = "color: white" })</li>
                        <li>@Html.ActionLink("My Patients", "MyPatients", "Patients", new { @style = "color: white" }))</li>
                        <li>@Html.ActionLink("Medicines", "Index", "Medicines", new { @style = "color: white" }))</li>
                        
                        <li>@Html.ActionLink("Requested Appointments","ShowAppointments","Appointments", new { @style = "color: white" }))</li>


                    }
                    @if (User.IsInRole("Patient"))
                    {
                        <li>@Html.ActionLink("Doctors", "Index", "Doctors", new { @style = "color: white" }))</li>
                        <li>@Html.ActionLink("Medicines", "Index", "Medicines")</li>
                        <li>@Html.ActionLink("My Diagnoses", "ShowDiagnoses", "Diagnoses", new { @style = "color: white" }))</li>
                        <li>@Html.ActionLink("My Receipts", "ShowReceipts", "Receipts", new { @style = "color: white" }))</li>
                        <li>@Html.ActionLink("My Requests","ShowAppointmentsPatient","Appointments", new { @style = "color: white" }))</li>
                       
       

                    }
                    @if (User.IsInRole("Admin"))
                    {

                        <li>@Html.ActionLink("Doctors", "Index", "Doctors", new { @style = "color: white" }))</li>
                        <li>@Html.ActionLink("Patients", "Index", "Patients", new { @style = "color: white" }))</li>



                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
      </div>
    </div>
    <div class="container body-content" style="padding: 0; margin: 0;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
